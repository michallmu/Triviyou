<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBCCC6"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbBack4"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#DBCCC6"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/imgAccount"
            android:layout_width="291dp"
            android:layout_height="162dp"
            app:srcCompat="@drawable/account" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvCurrentEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:text=""
        android:textColor="#333333"
        android:textSize="28dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvIwantLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:fontFamily="serif"
        android:text="@string/iWantLogOut"
        android:textStyle="italic"
        android:textColor="#333333"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvWantChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:fontFamily="serif"
        android:text="@string/iWantChangePass"
        android:textColor="#333333"
        android:textSize="20dp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/frameLayoutChangePassword"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        >

    </FrameLayout>


</LinearLayout>