<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F9F9F9"
    tools:context=".QuestionActivity">

    <!-- ProgressBar to show while loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center" />

    <!-- Header Section with Back Button and Level Text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/imgbBack6"
            android:layout_width="43dp"
            android:layout_height="38dp"
            android:backgroundTint="#F9F9F9"
            app:srcCompat="@drawable/back"
             />

        <TextView
            android:id="@+id/tvShowLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text=""
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Question Text -->
    <TextView
        android:id="@+id/tvQuestionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:gravity="center"
        android:text=""
        android:textColor="#004680"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <!-- ImageView and WebView in the same position using FrameLayout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"
        tools:ignore="WebViewLayout">
        <!-- ImageView for the question -->
        <ImageView
            android:id="@+id/imgQuestion"
            android:layout_width="123dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:visibility="gone" /> <!-- Set visibility to gone by default -->

        <!-- WebView for the video question -->
        <WebView
            android:id="@+id/videoQuestion"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:visibility="gone" /> <!-- Set visibility to gone by default -->
    </FrameLayout>

    <!-- Radio Buttons for Answer Choices -->
    <RadioGroup
        android:id="@+id/answersGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/rbAnswer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:visibility="gone"
            android:text=""
            android:textSize="20sp"
            android:layoutDirection="rtl" />

        <RadioButton
            android:id="@+id/rbAnswer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:fontFamily="serif"
            android:text=""
            android:textSize="20sp"
            android:layoutDirection="rtl" />

        <RadioButton
            android:id="@+id/rbAnswer3"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text=""
            android:textSize="20sp"
            android:layoutDirection="rtl" />

        <RadioButton
            android:id="@+id/rbAnswer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:fontFamily="serif"
            android:text=""
            android:textSize="20sp"
            android:layoutDirection="rtl" />
    </RadioGroup>

    <!-- Submit Button -->
    <Button
        android:id="@+id/bSubmit"
        android:layout_width="173dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="#004680"
        android:fontFamily="serif"
        android:text="@string/nextQuestion"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Additional Information Text -->
    <TextView
        android:id="@+id/tvQuestionInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text=""
        android:textColor="#6A7278"
        android:textSize="15sp"
        android:textStyle="bold" />
</LinearLayout>
